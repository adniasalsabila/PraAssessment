<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".segitiga">
<androidx.constraintlayout.widget.ConstraintLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_alas" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.258"
            app:layout_constraintVertical_bias="0.101" android:hint="alas"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_tinggi" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_alas" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.258" app:layout_constraintVertical_bias="0.034"
            android:hint="tinggi"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_hitung2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_tinggi" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintVertical_bias="0.056" android:text="hitung"/>
    <TextView
            android:text="Luas :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_luasSegit" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_hitung2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.139"
            app:layout_constraintVertical_bias="0.13" android:textSize="18sp"/>
    <TextView
            android:text="Keliling :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_kelSegit" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_luasSegit" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.139"
            app:layout_constraintVertical_bias="0.107" android:textSize="18sp"/>
    <Button
            android:text="share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_share2"
            app:layout_constraintTop_toBottomOf="@+id/tv_kelSegit" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.156"/>
    <TextView
            android:text="_"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:id="@+id/luas_segit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_hitung2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_kelSegit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/tv_luasSegit" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="18sp" app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintVertical_bias="0.618"/>
    <TextView
            android:text="_"
            android:layout_width="61dp"
            android:layout_height="45dp"
            android:id="@+id/keliling_segit"
            app:layout_constraintBottom_toTopOf="@+id/bt_share2" app:layout_constraintTop_toBottomOf="@+id/luas_segit"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/tv_kelSegit"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.612"/>


</androidx.constraintlayout.widget.ConstraintLayout></layout>